<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.it.belotserkovsky.pojos">
    <class name="WorkPlan" table="workPlans" lazy="false">
        <id name="id" type="long">
            <generator class="increment"/>
        </id>
        <property name="title" type="string" access="property"/>
        <property name="date" type="date" access="property"/>

        <set name="bids" table="bids">
            <key column="workPlan_id"></key>
            <one-to-many class="Bid"/>
        </set>
        <set name="brigades" table="brigades">
            <key column="workPlan_id"></key>
            <one-to-many class="Brigade"/>
        </set>
    </class>
</hibernate-mapping>