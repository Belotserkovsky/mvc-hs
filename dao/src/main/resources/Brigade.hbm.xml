<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.it.belotserkovsky.pojos">
    <class name="Brigade" table="brigades" lazy="false">
        <id name="id" type="long">
            <generator class="increment"/>
        </id>
        <property name="title" type="string" access="property"/>

        <many-to-one name="workPlan" class="WorkPlan" column="workPlan_id"/>

        <set name="workers" table="T_WORKER_BRIGADE" inverse="true" lazy="true" fetch="select">
            <key column="F_BRIGADE_ID"/>
            <many-to-many column="F_WORKER_ID" class="Worker"/>
        </set>
    </class>
</hibernate-mapping>