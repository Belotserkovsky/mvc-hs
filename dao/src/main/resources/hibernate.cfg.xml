<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- DataSource & Connection info. -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/my_db</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">kost</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.pool_size">10</property>
        <property name="hibernate.c3p0.acquire_increment">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.max_statements">180</property>
        <property name="hibernate.c3p0.min_size">5</property>

        <!-- General Hibernate settings. -->
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

         <!--2nd level cache settings. -->
        <!--<property name="hibernate.cache.use_second_level_cache">true</property>-->
        <!--<property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>-->
        <!--<property name="hibernate.cache.use_query_cache">true</property>-->

        <!-- Mapping. -->
        <mapping class="by.academy.it.belotserkovsky.pojos.Bid"/>
        <mapping class="by.academy.it.belotserkovsky.pojos.User"/>
        <mapping class="by.academy.it.belotserkovsky.pojos.Brigade"/>
        <mapping class="by.academy.it.belotserkovsky.pojos.Worker"/>
        <mapping class="by.academy.it.belotserkovsky.pojos.UserContacts"/>

    </session-factory>
</hibernate-configuration>