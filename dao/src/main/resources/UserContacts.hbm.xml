<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.it.belotserkovsky.pojos">
    <class name="UserContacts" table="user_contacts" lazy="false">
        <id name="id" type="long">
            <generator class="increment"/>
        </id>
        <property name="address" type="string" access="property"/>
        <property name="phone" type="string" access="property"/>
        <property name="email" type="string" access="property"/>

        <one-to-one name="user" class="User" constrained="true"/>
    </class>
</hibernate-mapping>