<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.academy.it.belotserkovsky.pojos">
    <class name="Worker" table="workers" lazy="false">
        <id name="id" type="long">
            <generator class="increment"/>
        </id>
        <property name="fullName" type="string" access="property"/>
        <property name="profession" type="string" access="property"/>

        <set name="brigades" table="T_WORKER_BRIGADE" inverse="false" lazy="true" fetch="select" cascade="all">
            <key column="F_WORKER_ID"/>
            <many-to-many column="F_BRIGADE_ID" class="Brigade"/>
        </set>
    </class>
</hibernate-mapping>